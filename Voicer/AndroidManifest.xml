        android:name="android.hardware.wifi"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.microphone"
        android:required="true" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" android:name="Voicer">
        
        <activity
            android:name="br.com.sixinf.voicer.telas.VoicerActivity"
            android:label="@string/app_name" 
            android:configChanges="keyboardHidden|orientation|screenSize|uiMode">
        </activity>

        <activity
            android:name="br.com.sixinf.voicer.telas.SetupActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="br.com.sixinf.voicer.telas.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <receiver android:name=".VoicerChamadaRecebida" >
        </receiver>

        
    </application>

