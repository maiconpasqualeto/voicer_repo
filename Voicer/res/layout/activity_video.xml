<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   	
    <TextView
        android:id="@+id/video_lblRamal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ramal: 3005"
        style="@style/header"/>
    
    <TextView
        android:id="@+id/video_lblStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:text="Chamando..."
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/video_imgPhonecall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/call_phonecall" 
            android:background="@xml/image_phone_call"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    
	    <Button
	        android:id="@+id/video_btnEncerrar"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="bottom"
	        android:paddingBottom="30dp"
	        android:paddingTop="30dp"
	        android:text="Encerrar"
	        android:textSize="35sp"
	        android:textStyle="bold"
	        android:textColor="@android:color/white"
	        android:background="@xml/custom_botao_vermelho" />
    
    </LinearLayout>
    
</LinearLayout>