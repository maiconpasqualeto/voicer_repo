<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   	
    <TextView
        android:id="@+id/video_lblRamal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ramal: 3005"
        style="@style/header"/>
    
    <TextView
        android:id="@+id/video_lblStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:text="Chamando..."
        android:textSize="16sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <FrameLayout 
            android:id="@+id/video_remote_video" 
            android:layout_width="match_parent"  
            android:layout_height="match_parent"
            android:layout_gravity="bottom|right" 
            android:gravity="bottom|right" 
            android:background="@android:color/black">
	        
	    </FrameLayout>
	
        <FrameLayout 
            android:layout_alignParentRight="true" 
            android:layout_alignParentBottom="true" 
            android:minHeight="90dp" 
            android:minWidth="90dp" 
            android:background="@drawable/grad_whiterounded" 
            android:layout_margin="4dp" 
            android:padding="4dp" 
            android:layout_height="94dp" 
            android:layout_width="94dp">
	        	<FrameLayout 
	        	    android:layout_gravity="center" 
	        	    android:id="@+id/video_local_video" 
	        	    android:layout_height="fill_parent" 
	        	    android:layout_width="fill_parent"></FrameLayout>
	    </FrameLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/video_buttonsContainer" >
    	
    
    </LinearLayout>
    
</LinearLayout>