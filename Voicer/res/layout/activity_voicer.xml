<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp" >

    <TextView
        android:id="@+id/voicer_lblRamal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ramal: 30050" 
        style="@style/header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="40dp" >

        <Button 
            android:id="@+id/voicer_btnChamar"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            style="@style/botao_entrada"            
            android:text="Chamar" />

        <Button
            android:id="@+id/voicer_btnContatos"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Contatos" 
            style="@style/botao_entrada"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/voicer_lblStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/status_bar"
            android:gravity="center"
            android:text="Conectando..."
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </FrameLayout>
    
</LinearLayout>